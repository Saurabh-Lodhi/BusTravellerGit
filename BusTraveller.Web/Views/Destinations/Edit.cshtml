@model BusTraveller.Web.Models.Destination

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 class="mb-3 fw-bold text-center" style="color:#0d6efd;">Edit Destination</h2>
                    <p class="text-muted text-center mb-4">
                        Update the details below to modify this travel destination.
                    </p>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">Destination Title</label>
                            <input asp-for="Title" class="form-control form-control-lg rounded-3 shadow-sm"
                                   placeholder="Enter destination title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-4">
                            <label asp-for="Location" class="form-label fw-semibold">Location</label>
                            <input asp-for="Location" class="form-control form-control-lg rounded-3 shadow-sm"
                                   placeholder="Enter location" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- Rating -->
                        <div class="mb-4">
                            <label asp-for="Rating" class="form-label fw-semibold">Rating</label>
                            <input asp-for="Rating" type="number" step="0.1" min="0" max="5"
                                   class="form-control form-control-lg rounded-3 shadow-sm"
                                   placeholder="Enter rating (0 - 5)" />
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control form-control-lg rounded-3 shadow-sm"
                                   placeholder="Paste image link" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index"
                               class="btn btn-light border rounded-3 px-4 py-2 fw-semibold shadow-sm">
                                ← Back
                            </a>
                            <button type="submit"
                                    class="btn btn-primary rounded-3 px-4 py-2 fw-semibold shadow-sm">
                                Save Changes
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
