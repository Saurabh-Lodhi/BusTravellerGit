@model BusTraveller.Web.Models.Destination

@{
    ViewData["Title"] = "Delete Destination";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center fw-bold">
                    Delete Destination
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">@Model.Title</h5>
                    <h6 class="text-muted">@Model.Location</h6>
                    <p class="fw-semibold">Rating: @Model.Rating ⭐</p>

                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded mb-3" style="max-height:250px;" />

                    <div class="alert alert-warning fw-semibold">
                        Are you sure you want to delete this destination?
                    </div>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
